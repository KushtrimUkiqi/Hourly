@page
@model IDP.Pages.Login.Index


        @if (Model.View.EnableLocalLogin)
        {
        <div class="session">
            <div class="left">
            </div>
            <form asp-page="/Account/Login/Index" class="log-in">
                <input type="hidden" asp-for="Input.ReturnUrl" />
            <h4>HOURLY</h4>
            <div class="floating-label">
                <input asp-for="Input.Username" placeholder="Email" id="email"/>
                <label asp-for="Input.Username">Username:</label>
                <div class="icon">
                    <?xml version="1.0" encoding="UTF-8"?>
                    <svg enable-background="new 0 0 100 100" version="1.1" viewBox="0 0 100 100" xml:space="preserve" xmlns="http://www.w3.org/2000/svg">
                        <style type="text/css">
                            .st0 {
                                fill: none;
                            }
                        </style>
                        <g transform="translate(0 -952.36)">
                            <path
                                d="m17.5 977c-1.3 0-2.4 1.1-2.4 2.4v45.9c0 1.3 1.1 2.4 2.4 2.4h64.9c1.3 0 2.4-1.1 2.4-2.4v-45.9c0-1.3-1.1-2.4-2.4-2.4h-64.9zm2.4 4.8h60.2v1.2l-30.1 22-30.1-22v-1.2zm0 7l28.7 21c0.8 0.6 2 0.6 2.8 0l28.7-21v34.1h-60.2v-34.1z"
                            />
                        </g>
                    </svg>
                </div>
            </div>
            <div class="floating-label">
                <input asp-for="Input.Password" placeholder="Password" type="password" id="password"/>
                <label asp-for="Input.Password" for="password">Password:</label>
                <div class="icon">
                    <?xml version="1.0" encoding="UTF-8"?>
                    <svg enable-background="new 0 0 24 24" version="1.1" viewBox="0 0 24 24" xml:space="preserve" xmlns="http://www.w3.org/2000/svg">
                        <style type="text/css">
                            .st0 {
                                fill: none;
                            }
                            .st1 {
                                fill: #010101;
                            }
                        </style>
                         <path class="st1" d="M19,21H5V9h14V21z M6,20h12V10H6V20z" />
                        <path class="st1" d="M16.5,10h-1V7c0-1.9-1.6-3.5-3.5-3.5S8.5,5.1,8.5,7v3h-1V7c0-2.5,2-4.5,4.5-4.5s4.5,2,4.5,4.5V10z" />
                        <path class="st1" d="m12 16.5c-0.8 0-1.5-0.7-1.5-1.5s0.7-1.5 1.5-1.5 1.5 0.7 1.5 1.5-0.7 1.5-1.5 1.5zm0-2c-0.3 0-0.5 0.2-0.5 0.5s0.2 0.5 0.5 0.5 0.5-0.2 0.5-0.5-0.2-0.5-0.5-0.5z" />
                    </svg>
                </div>
            </div>
            <div class="login-button-group">
                <div class="button-container">
                    <button class="facebook-button">
                        @{
                            var facebookProvider = Model.View.VisibleExternalProviders.FirstOrDefault(x => x.DisplayName == "Facebook");
                        }

                        @if (facebookProvider != null)
                        {
                            <a class="facebookLoginButton"
                       asp-page="/ExternalLogin/Challenge"
                       asp-route-scheme="@facebookProvider.AuthenticationScheme"
                       asp-route-returnUrl="@Model.Input.ReturnUrl">
                                Facebook
                            </a>
                        }
                    </button>
                </div>
                <div class="button-container">
                    <button class="login-button" name="Input.Button" value="login">Login</button>
                </div>
            </div>
            <div class="button-container" style="margin-top: 25px!important; display: flex; justify-content: center; width: 380px;">
                <a asp-page="/User/Registration/Index"
                asp-route-returnUrl="@Model.Input.ReturnUrl">
                    Start using our products
                </a>
            </div>
        </form>
        </div>
        }