@model Contracts.Employee.Requests.CreateEmployeeRequest
@{
    ViewData["Title"] = "Create employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create employee</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row py-2">
                <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                
            </div>
            <div class="form-group row py-2">
                <label asp-for="LastName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <label asp-for="PhoneNumber" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <label asp-for="Position" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex justify-content-end mt-3">
                <input type="submit" value="Create" class="btn btn-primary col-5" />
            </div>
        </form>
    </div>
</div>

<div>
